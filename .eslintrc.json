{
	"root": true,
	"env": {
		"es6": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"idiomatic"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"comma-dangle": [
			"error",
			{
				"arrays": "always-multiline",
				"objects": "always",
				"imports": "always-multiline",
				"exports": "always-multiline",
				"functions": "only-multiline"
			}
		]
	}
}
